IF STRINGKEY $"montuaaaa" EqualTo  $"montu"
LOG "====================================="

BLOCK:HttpRequest
  url = "https://example.com"
  TYPE:STANDARD
  $""
  "application/x-www-form-urlencoded"
ENDBLOCK

ELSE IF STRINGKEY $"security" EqualTo     $"security"
LOG "************************************  "
BLOCK:HttpRequest
  TYPE:STANDARD
  $""
  "application/x-www-form-urlencoded"
ENDBLOCK


ELSE
LOG "====================================="

BLOCK:HttpRequest
  url = "https://bing.com"
  TYPE:STANDARD
  $""
  "application/x-www-form-urlencoded"
ENDBLOCK

END








